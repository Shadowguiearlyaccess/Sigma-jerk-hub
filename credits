local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Check if ScreenGui already exists to prevent duplicates
local screenGui = playerGui:FindFirstChild("CreditsGui")
if not screenGui then
    screenGui = Instance.new("ScreenGui")
    screenGui.Name = "CreditsGui" -- Give it a name for better management
    screenGui.Parent = playerGui
end

-- Check if TextLabel already exists to prevent duplicates
local textLabel = screenGui:FindFirstChild("CreditsLabel")
if not textLabel then
    textLabel = Instance.new("TextLabel")
    textLabel.Name = "CreditsLabel"
    textLabel.Parent = screenGui
    textLabel.Size = UDim2.new(0.6, 0, 0.1, 0) -- Slightly wider for better visibility
    textLabel.Position = UDim2.new(0.2, 0, 0.05, 0) -- Adjust for better centering
    textLabel.BackgroundTransparency = 0.5 -- Set transparency to 0.5
    textLabel.BackgroundColor3 = Color3.new(0, 0, 0) -- Add a background color for better contrast
    textLabel.Text = "This was made by S1ns432 on Discord"
    textLabel.TextColor3 = Color3.new(1, 1, 1) -- White text
    textLabel.TextScaled = true -- Scale text automatically
    textLabel.Font = Enum.Font.SourceSansBold
    textLabel.TextStrokeTransparency = 0 -- Add stroke for better readability
    textLabel.TextStrokeColor3 = Color3.new(0, 0, 0) -- Black outline for contrast
end
